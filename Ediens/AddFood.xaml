<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ediens.AddFood"
             Title="AddFood">
    <VerticalStackLayout>
        <Entry Placeholder="Name" x:Name="NameEntry"/>
        <Entry Placeholder="Portion Type" x:Name="PortionTypeEntry"/>
        <Entry Placeholder="Kcal Per Portion" x:Name="KcalEntry" Keyboard="Numeric"/>
        <Entry Placeholder="Quantity" x:Name="QuantityEntry" Keyboard="Numeric"/>
        <Button Text="Add Food" Clicked="OnAddFoodClicked"/>
    </VerticalStackLayout>
</ContentPage>